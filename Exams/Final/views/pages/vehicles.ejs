<h1>Browse Vehicles</h1>

<div class="vehicles-grid">
  <% vehicles.forEach(v => { %>
    <div class="vehicle-card">
      <img src="<%= v.image %>" alt="<%= v.name %>" />
      <div class="vehicle-info">
        <h3><%= v.name %></h3>
        <p class="brand"><%= v.brand %></p>
        <p>Type: <span class="type"><%= v.type %></span></p>
        <p class="price">$<%= v.price %></p>
      </div>
    </div>
  <% }) %>
</div>

<style>
  h1 {
    color: #001f3f;
    border-bottom: 3px solid #001f3f;
    padding-bottom: 10px;
    margin-bottom: 30px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .vehicles-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    justify-content: center;
  }

  .vehicle-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 250px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .vehicle-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
  }

  .vehicle-card img {
    width: 100%;
    height: 140px;
    object-fit: cover;
  }

  .vehicle-info {
    padding: 15px 20px;
    text-align: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
  }

  .vehicle-info h3 {
    margin: 0 0 8px 0;
    color: #001f3f;
  }

  .vehicle-info .brand {
    font-weight: 600;
    margin-bottom: 6px;
    color: #555;
  }

  .vehicle-info .type {
    font-style: italic;
    color: #007bff;
  }

  .vehicle-info .price {
    margin-top: 12px;
    font-weight: 700;
    font-size: 1.1rem;
    color: #001f3f;
  }

  @media (max-width: 600px) {
    .vehicle-card {
      width: 100%;
    }
  }
</style>
