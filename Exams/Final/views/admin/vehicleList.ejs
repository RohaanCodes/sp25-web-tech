    background-color: #003366;
  }

  .styled-table {
    width: 100%;
    border-collapse: collapse;
    background: #ffffff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    border-radius: 6px;
    overflow: hidden;
  }

  .styled-table th,
  .styled-table td {
    padding: 14px 16px;
