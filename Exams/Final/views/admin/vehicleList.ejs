<h1>All Vehicles</h1>

<a href="/admin/vehicles/new" class="button-link">‚ûï Add New Vehicle</a>

<table class="styled-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Type</th>
      <th>Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% vehicles.forEach(v => { %>
      <tr>
        <td><%= v.name %></td>
        <td><%= v.brand %></td>
        <td><%= v.type %></td>
        <td>$<%= v.price %></td>
        <td><img src="<%= v.image %>" width="80" style="border-radius: 5px; object-fit: cover;" /></td>
        <td>
          <a href="/admin/vehicles/<%= v._id %>/edit" class="action-link">‚úèÔ∏è Edit</a>
          <form method="POST" action="/admin/vehicles/<%= v._id %>/delete" style="display:inline;">
            <button type="submit" class="delete-button">üóëÔ∏è Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

