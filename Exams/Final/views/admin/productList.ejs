<h1 class="page-heading">üì¶ Manage Products</h1>
<div class="add-product-wrapper">
  <a href="/admin/products/new" class="add-product-btn">‚ûï Add New Product</a>
</div>

<table class="product-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.title %></td>
        <td>$<%= product.price.toFixed(2) %></td>
        <td>
          <a href="/admin/products/<%= product._id %>/edit" class="edit-btn">‚úèÔ∏è Edit</a>
          <form action="/admin/products/<%= product._id %>/delete" method="POST" class="inline-form">
            <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f4f7fa;
    padding: 30px;
  }

  .page-heading {
    text-align: center;
    color: #002147;
    margin-bottom: 20px;
    font-size: 2rem;
  }

  .add-product-wrapper {
    text-align: right;
    margin-bottom: 15px;
  }

  .add-product-btn {
    background-color: #002147;
    color: white;
    padding: 10px 16px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
  }

  .add-product-btn:hover {
    background-color: #004080;
  }

  .product-table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
    overflow: hidden;
  }

  .product-table th, .product-table td {
    padding: 14px 18px;
    border-bottom: 1px solid #e3e3e3;
    text-align: left;
  }

  .product-table th {
    background-color: #002147;
    color: white;
  }

  .edit-btn,
  .delete-btn {
    background-color: transparent;
    border: none;
    color: #002147;
    font-weight: bold;
    cursor: pointer;
    margin-right: 10px;
    text-decoration: none;
  }

  .edit-btn:hover {
    color: #1a73e8;
  }

  .delete-btn:hover {
    color: #d9534f;
  }

  .inline-form {
    display: inline;
  }

  @media (max-width: 768px) {
    .product-table th, .product-table td {
      padding: 10px;
      font-size: 14px;
    }

    .page-heading {
      font-size: 1.5rem;
    }
  }
</style>